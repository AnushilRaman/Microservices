@model RegistrationRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-summary="Email" class="text-danger"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Username..." />
                <span asp-validation-summary="Name" class="text-danger"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumeber..." />
                <span asp-validation-summary="PhoneNumber" class="text-danger"/>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." type="password" />
                <span asp-validation-summary="PhoneNumber" class="text-danger"/>
            </div>
            <div class="col-6 offset-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select--</option>
                </select>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>
